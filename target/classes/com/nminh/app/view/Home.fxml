    <center>
        <TabPane fx:id="tabPanelMain" prefHeight="524.0" prefWidth="852.0" styleClass="tab-page-cover" stylesheets="@../view/MainScreenStyle.css" tabClosingPolicy="UNAVAILABLE" />
